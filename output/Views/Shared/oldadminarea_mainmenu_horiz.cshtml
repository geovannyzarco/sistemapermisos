@using runnerDotNet;
@{
 XTempl Model = this.Model;
 if(ViewBag != null && ViewBag.xt != null)
 {
  Model = ViewBag.xt;
  if(Model != null)
  {
   Model.currentViewContext = ViewContext;
  }
 }
 string webRootPath = MVCFunctions.GetWebRootPath();
}

@foreach (string _item1_menulink in Model.GetSection("item1_menulink", this)){
<td id="item1" view="topitem" class="Leaf runner-cc runner-bl runner-b-hmenu">
	<table class="runner-hmenu" cellpadding="0">
		<TR class="runner-menutab@{foreach (string _item1_current in Model.GetSection("item1_current", this)){@MvcHtmlString.Create(@" current")}}">
			<td class="runner-cl"><IMG src="@(webRootPath)images/spacer.gif" /></td>
			<td class="runner-cc">	
				<A @(Model.displayVar("item1_menulink_attrs")) class="curlink">@(Model.displayVar("item1_title"))</a>
			</td>
			<td class="runner-cr"><IMG src="@(webRootPath)images/spacer.gif" /></td>
		</tr>
	</table>	
</td>
}
